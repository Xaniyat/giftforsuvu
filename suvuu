        document.addEventListener('DOMContentLoaded', function() {
            const reasonElement = document.getElementById('reason');
            const generateButton = document.getElementById('generate-btn');
            const heartsContainer = document.getElementById('hearts-container');
            
            let lastIndex = -1;
            
            function getRandomReason() {
                let randomIndex;
                // Ensure we don't get the same reason twice in a row
                do {
                    randomIndex = Math.floor(Math.random() * reasons.length);
                } while (randomIndex === lastIndex && reasons.length > 1);
                
                lastIndex = randomIndex;
                return reasons[randomIndex];
            }
            
            function createFallingHearts() {
                for (let i = 0; i < 12; i++) {
                    const heart = document.createElement('div');
                    heart.classList.add('heart');
                    heart.innerHTML = '❤️';
                    heart.style.left = `${Math.random() * 100}%`;
                    heart.style.fontSize = `${Math.random() * 15 + 10}px`;
                    heart.style.animationDuration = `${Math.random() * 3 + 2}s`;
                    heart.style.animationDelay = `${Math.random() * 0.5}s`;
                    heartsContainer.appendChild(heart);
                    
                    // Remove hearts after animation completes
                    setTimeout(() => {
                        heart.remove();
                    }, 5000);
                }
            }
            
            generateButton.addEventListener('click', function() {
                // Fade out current text
                reasonElement.style.opacity = '0';
                
                // Add visual feedback for button click
                generateButton.classList.add('scale-95');
                setTimeout(() => {
                    generateButton.classList.remove('scale-95');
                }, 200);
                
                // Create falling hearts animation
                createFallingHearts();
                
                // Update text and fade in after a short delay
                setTimeout(() => {
                    reasonElement.textContent = getRandomReason();
                    reasonElement.style.opacity = '1';
                }, 300);
            });
            
            // Optional: Add a keyboard shortcut (spacebar) to generate a new reason
            document.addEventListener('keydown', function(event) {
                if (event.code === 'Space' && document.activeElement !== generateButton) {
                    event.preventDefault();
                    generateButton.click();
                }
            });
        });
    </script>
